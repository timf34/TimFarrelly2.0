---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Turrell glow">
  <!-- custom element in the markup -->
  <turrell-glow src="/sequence.json"></turrell-glow>

  <main style="position:relative;z-index:1;padding:2rem;text-align:center">
    <h1>Tim Farrelly</h1>
  </main>

  <!-- ðŸš€ loads *after* the first paint, browser-only -->
  <script type="module" src="src/lib/turrell-glow.js"></script>
</Layout>

<style>
  main {
    position: relative;
    z-index: 1;
    padding: 2rem;
    text-align: center;
  }
  
  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
    font-family: monospace;
    color: #fff;
  }
  
  p {
    font-size: 1.2rem;
    opacity: 0.8;
  }
  .gradient-container{
    position:fixed;
    inset:0;
    z-index:-1;
    pointer-events:none;
  }
</style>
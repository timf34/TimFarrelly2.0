---
import Layout from '../layouts/Layout.astro';
import GradientCanvas from '../components/GradientCanvas.astro';
---

<Layout title="Gradient Light Field Demo">
  <GradientCanvas />
  
  <main>
    <h1>Gradient Light Field</h1>
    <p>A beautiful animated gradient background effect using Three.js</p>
    <p>Automatically adapts to dark mode!</p>
  </main>
</Layout>

<style>
  main {
    position: relative;
    z-index: 1;
    padding: 2rem;
    text-align: center;
  }
  
  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  p {
    font-size: 1.2rem;
    opacity: 0.8;
  }
</style>